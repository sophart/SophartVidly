@using System.Runtime.Serialization
@model SophartVidly.ViewModels.Customers.CustomerForUpdateViewModel
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "Customers", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)

    <div class="mb-3">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.BirthDate)
        @Html.TextBoxFor(m => m.BirthDate, "{0: d MMM yyyy}" , new { @class = "form-control" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.MembershipTypeId)
        @Html.DropDownListFor(m => m.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), new { @class = "form-control" })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter, new { @class = "form-check-input", @checked = true })
        @Html.LabelFor(m => m.IsSubscribedToNewsletter, new { @class = "form-check-label" })
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

}