@model IEnumerable<SophartVidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <h3>No Customers</h3>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Customers</th>
                <th>Membership Type</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td> @Html.ActionLink(customer.Name, "Detail", new { Id = customer.Id })</td>
                    <td> @customer.MembershipType.DurationInMonths</td>
                    <td> @customer.MembershipType.DiscountRate%</td>
                </tr>
            }
        </tbody>
    </table>
}
